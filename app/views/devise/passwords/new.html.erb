<style>
body {
  background-image: url('http://subtlepatterns.com/patterns/sativa.png');
}
</style>
<div class="centered six columns">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render 'layouts/error_messages', object: resource %>
    <ul>
      <li class="prepend field">
        <span class="adjoined"><i class="icon-mail"></i></span>
        <%= f.email_field :email, autofocus: true, class: "xwide text input", placeholder: "Email", required: true %>
      </li>

      <li class="field">
        <%= f.submit "Send me reset password instructions", class: "medium primary btn", style: "color:white" %>
      </li>
    </ul>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
