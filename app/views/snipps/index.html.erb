<% content_for :facebook do %>
  <meta property="og:image" content="<%= asset_url('img_silence_demo.jpg') %>" />
  <meta property="og:title" content="Gumsnipp free code snippets for Gumby" />
  <meta property="og:url" content="<%= root_url %>" />
  <meta property="og:description" content="Design elements, playground and code snippets for Gumby HTML/CSS/JS framework" />
<% end %>

<% @snipps.each_slice(3) do |snipps| %>
  <div class="row">
    <% snipps.each do |snipp| %>
      <div class="four columns thumbnail">
        <h5><%= link_to snipp.title, snipp %><span style="float:right" class="ttip" data-tooltip="Viewed"><%= number_to_human(snipp.visits_count) %><i class="icon-eye"></i></span></h5>
        <img src="http://immediatenet.com/t/fs?Size=800x600&URL=<%= url_for action: :subscreens, id: snipp.id, only_path: false %>" alt="Snipp Screenshot">
        <div class="field" style="margin-top:-23px">
          <div class="medium primary btn" style="width:100%"><%= link_to "View", snipp %></div>
        </div>
      </div>
    <% end %>
  </div>
  <br>
<% end %>

<div class="blog-pager" id="blog-pager">
  <%= will_paginate @snipps, :inner_window => 2, :outer_window => 1 %>
</div>
